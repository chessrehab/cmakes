ls	-list directory contents
ls	[option] [file]
ls	-a (all, incl hidden) -l (long listing) -F (file types) -i (inode) --sort=SMTHN
printenv -print all or part of the environment
printenv [option] [variable]
printenv VAR
env	-run program in a modified environment
env	[option] [-] [NAME=VALUE] [COMMAND ARG]
set	-set or unset values of shell options
set	***unclear to me
unset	unset shell variable
unset	VAR
echo	display a line of text
echo	[SHORT-OPTION] [STRING]
export	set export attribute for shell variables 
export	VAR=VAL -p(display list of all exported vars and funcs
cp	copy files and directories
cp	[option] SOURCE DEST
cp	-i (promp before overwrite) -l (hard link files instead of copy)
cp	-P (no dereference of sym links) -n (no overwrite)
cp	-r (recursive copy of directories) -s (make sym links instead of cp)
cp	-t (target) -u (update,copy only when the source is newer than dest)
cp	-v (verbose)
ln	make links between files
ln	-f (force removing dest files) -i (interactive) -s (symbolic links)
mv	move/rename files
mv	[option] SOURCE DEST
mv	-b (make backups) -f (force) -i (interactive prompts) -n (no overwrites)
mv	-u (update only)
rm	remove files or directories
rm	[option] [file]
rm	-f (force) -r (recursive) -i (interactive prompts) -I (ie prompt only once)
mkdir	make directory
mkdir	[option] DIRECTORY
rmdir	remove empty directories
rmdir	[option] DIRECTORY
rmdir	-p (remove parents in the path)
tree	lists of contents of directory/file structure
tree	-d (only directories) -f (fullpath prefix) -x (stay on current fs)
tree	-L (max depth level) -P (pattern filter) -p (file permissions)
tree	-s (file size) -u (users) -h (human readable) -J (json format)
file	determine file type
cat	concatenate files and print to stdout
cat	-n (number lines) -s (squeeze out empty lines)
tail	output last lines of file
tail	-c (number of bytes) -n (number of lines) -f (follow-output appended data
tail	as the file grows)
head	print first lines of file to stdout
head	-c (number of bytes) -n (number of lines)
ps	output snapshot of current processes
ps	-e (every process) -f (full columns) -o (list columns u want to display)
ps	-N (negation) -r (only running processeses) -p (pid filter) -t (tty filter)
ps	-F (extra full format) -s (session id) s (show signals) X (some registers)
ps	f (ascii forrest) -H (forrest) k (sort by column) H (show threads)
pstree	display tree of processes
pstree	-p (show pids)
top	interactive process list
kill	send signal to a process
kill	[options] <PID>
kill	-L (list of signals on the system) -NR (send signal number)
killall	kill process by name
killall	-I (ignore case) -i (interactive) -r (regexp) -s (specific signal) 
killall	-u (user)
pkill	loopup or signal processes based on name or other attribues
mount	mount a file system
mount	-t (type) DEVICE DIR
mount	-a (mount all as in fstab) -B (bind mount) -r (readonly mount) -rw -w
mount	--source (source device) --target (target dir)
umount	unmount filesystem
umount	-f (force unmount on nonresponding NFS) -l (lazy unmount) -R (recursive)
df	report filesystem disk space usage
df	-t (only fs type t) --total (calculate totals)
lsblk	list block devices
lsblk	-fs (filesystems info) -o (output list of wished columns)
du	estimate file space usage
du	-s (summary per argument)
sort	sort lines of text
sort	[OPTION [FILE]
sort	-n (numeric sort) -r (reverse results) -k (via key)
grep	searches for patterns in file
grep	[OPTION] PATTERN [FILE]
grep	-E (pattern is a extended regular expression) -F (fixed strings not regex) -G (basic regex)
grep	-e (multiple expression patterns) -i (ignore case) -v (invert match) -c (output count of matchin lines)
grep	-L (files wo match on output) -l (filenames with matches) -m (nr of lines to be read)
grep	-H (with filenames) -h (no filenames) -n (add linemuber) -A (print number of lines-trailing)
grep	-B (leading context print) --exclude=GLOB (exclude files from search) --exclude-dir=GLOB (dirs)
grep	--include=GLOB (include files glob) -r (recursive in dirs)
grep	^ (starting with) $ (trailing with)
gzip	compress files
gzip	[FILES]
gzip	-d (decompress) -k (keep original files) -l (list of attributes of compression)
gzip	-r (recursive compression in dirs) -v (verbose output of processing compression)
gunzip	unzips files
zcat	unzips file and cats it on output
tar	archiving utility
tar	-c (create) -v (verbose) -r (append to the archive) -t (list the contents of arch) -u (update with newer files)
tar	-x (extract from archive) -z (gzip the archive) -h (dereference and follow symlinks)
zip	package and archive compatible with winzip
zip	add (add files to archive)
unzip	-l (list archived files)
sleep	delay for a specified amount of time
sleep	NUMBER [SUFFIX]
sleep	suffixes: s(sec) m(min) h(hours) d(days)
